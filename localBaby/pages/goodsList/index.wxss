.goods-item{
    padding: 20rpx;
    border-bottom: 1px #ccc solid;
    display: flex;
}

.goods-item image{
    width: 180rpx;
    height: 180rpx;
    flex-shrink: 0; /* 禁止缩放，可以防止被右边的内容挤压变形 */
    margin-right: 20rpx;
}

.goods-info{
    /* 把主轴渲染90度， 垂直方向变为主轴 */
    display: flex;
    flex-direction: column;

    justify-content: space-between;
}

.goods-title{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.goods-price{
    font-weight: bold;
    color: red;
}

.hasmore{
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #999;
    font-size: 14px;
}