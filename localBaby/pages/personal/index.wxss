.personal-info{
    padding: 100rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: #66cbff;
    color: #fff;
}

.avatar{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%; 
    overflow: hidden;
    margin-bottom: 20rpx;
}

.button-bar{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10rpx 20rpx;
    border-bottom: 1px #ccc solid;
    font-size: 14px;
    margin-top: 20px;
}

.arrow {
    width: 12px;
    height: 12px;
    border-top: 1px red solid;
    border-right: 1px red solid;
    transform: rotate(45deg);
}